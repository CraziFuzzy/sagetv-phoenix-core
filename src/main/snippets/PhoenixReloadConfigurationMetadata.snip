<snippet label="Reload Configuration Metadata">
	<script>
		try {
		    // reload configuration
			api.widgetAPI.EvaluateExpression("phoenix_api_ReloadConfiguration()");
			
			// show info box that configuration was reloaded
			plugin.info("Configuration Metadata is Reloaded."); 
		} catch (ex) {
			plugin.alert("Failed to reload Configuration Metadata!"); 
		}
	</script>
</snippet>
